#!/bin/sh
# Send a mail when invoking a login/interactive shell

# MUA check
if type neomutt > /dev/null; then
	MAILCMD=neomutt
else
	echo "no neomutt found - exiting"
	exit 0
fi

if [[ "$-" == *i* ]]; then
MAILTEXT="\
LOGIN
-----
Host:     $(hostname)
Date:     $(date)
User:     $USER
Shell:    $SHELL
"
MAILSUBJECT="Login: $(hostname) - $USER"
echo "$MAILTEXT" | "$MAILCMD" -B -s "$MAILSUBJECT" {{adminmail}}
fi
